{% extends '@SportOase/base.html.twig' %}

{% block title %}Slot-Verwaltung{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">üóÇÔ∏è Slot-Verwaltung</h1>
        <p class="mt-2 text-sm text-gray-600">Verwalten Sie Slot-Namen und blockierte Zeitslots</p>
    </div>

    {% for message in app.flashes('success') %}
        <div class="mb-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg">
            ‚úì {{ message }}
        </div>
    {% endfor %}

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">üìù Neuer Slot-Name</h2>
            <form method="post" class="space-y-4">
                <input type="hidden" name="action" value="add_slot_name">
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Wochentag</label>
                    <select name="weekday" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="Montag">Montag</option>
                        <option value="Dienstag">Dienstag</option>
                        <option value="Mittwoch">Mittwoch</option>
                        <option value="Donnerstag">Donnerstag</option>
                        <option value="Freitag">Freitag</option>
                    </select>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Stunde</label>
                    <select name="period" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        {% for i in 1..6 %}
                            <option value="{{ i }}">{{ i }}. Stunde</option>
                        {% endfor %}
                    </select>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Label</label>
                    <input type="text" name="label" placeholder="z.B. Fu√üball AG" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                
                <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors font-medium">
                    ‚ûï Hinzuf√ºgen
                </button>
            </form>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">üîí Slot blockieren</h2>
            <form method="post" class="space-y-4">
                <input type="hidden" name="action" value="block_slot">
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Datum</label>
                    <input type="date" name="date" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Wochentag</label>
                    <select name="weekday" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="Montag">Montag</option>
                        <option value="Dienstag">Dienstag</option>
                        <option value="Mittwoch">Mittwoch</option>
                        <option value="Donnerstag">Donnerstag</option>
                        <option value="Freitag">Freitag</option>
                        <option value="Samstag">Samstag</option>
                        <option value="Sonntag">Sonntag</option>
                    </select>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Stunde</label>
                    <select name="period" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        {% for i in 1..6 %}
                            <option value="{{ i }}">{{ i }}. Stunde</option>
                        {% endfor %}
                    </select>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Grund</label>
                    <input type="text" name="reason" value="Beratung" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                
                <button type="submit" class="w-full bg-orange-600 text-white px-4 py-2 rounded-md hover:bg-orange-700 transition-colors font-medium">
                    üîí Blockieren
                </button>
            </form>
        </div>
    </div>

    <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">üìã Aktive Slot-Namen ({{ slot_names|length }})</h2>
            </div>
            <div class="overflow-x-auto">
                {% if slot_names|length > 0 %}
                    <table class="w-full">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Wochentag</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stunde</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Label</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aktionen</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for slotName in slot_names %}
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ slotName.weekday }}</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ slotName.period }}.</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ slotName.label }}</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <form method="post" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete-slot-name-' ~ slotName.id) }}">
                                            <button type="submit" formaction="{{ path('sportoase_admin_delete_slot_name', {id: slotName.id}) }}" onclick="return confirm('Wirklich l√∂schen?')" class="text-red-600 hover:text-red-900 font-medium">
                                                üóëÔ∏è L√∂schen
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="px-6 py-8 text-center text-gray-500">
                        Keine Slot-Namen vorhanden
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">üö´ Blockierte Slots ({{ blocked_slots|length }})</h2>
            </div>
            <div class="overflow-x-auto">
                {% if blocked_slots|length > 0 %}
                    <table class="w-full">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Datum</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stunde</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Grund</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aktionen</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for blockedSlot in blocked_slots %}
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ blockedSlot.date|date('d.m.Y') }} ({{ blockedSlot.weekday }})</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ blockedSlot.period }}.</td>
                                    <td class="px-6 py-4 text-sm text-gray-900">{{ blockedSlot.reason }}</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <form method="post" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete-blocked-slot-' ~ blockedSlot.id) }}">
                                            <button type="submit" formaction="{{ path('sportoase_admin_delete_blocked_slot', {id: blockedSlot.id}) }}" onclick="return confirm('Blockierung wirklich aufheben?')" class="text-red-600 hover:text-red-900 font-medium">
                                                ‚úñÔ∏è Aufheben
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="px-6 py-8 text-center text-gray-500">
                        Keine blockierten Slots vorhanden
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="mt-8">
        <a href="{{ path('sportoase_admin_dashboard') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
            ‚Üê Zur√ºck zum Admin-Dashboard
        </a>
    </div>
</div>
{% endblock %}
