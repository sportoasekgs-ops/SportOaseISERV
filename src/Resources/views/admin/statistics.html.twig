{% extends '@SportOase/base.html.twig' %}

{% block title %}Statistiken{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">üìä Statistiken & Berichte</h1>
        <p class="mt-2 text-sm text-gray-600">√úbersicht √ºber Buchungen und Nutzung</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="text-4xl">üìÖ</div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Gesamt Buchungen
                        </dt>
                        <dd class="text-3xl font-bold text-gray-900">
                            {{ total_bookings }}
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="text-4xl">üìÜ</div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Diese Woche
                        </dt>
                        <dd class="text-3xl font-bold text-blue-600">
                            {{ bookings_this_week }}
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="text-4xl">üë•</div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Gesamt Benutzer
                        </dt>
                        <dd class="text-3xl font-bold text-gray-900">
                            {{ total_users }}
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="text-4xl">‚úì</div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Aktive Benutzer
                        </dt>
                        <dd class="text-3xl font-bold text-green-600">
                            {{ active_users }}
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">üìÖ Buchungen nach Wochentag</h2>
            <div class="space-y-3">
                {% set weekdays = ['Montag', 'Dienstag', 'Mittwoch', 'Donnerstag', 'Freitag', 'Samstag', 'Sonntag'] %}
                {% set maxCount = 0 %}
                {% for stat in bookings_by_day %}
                    {% if stat.count > maxCount %}
                        {% set maxCount = stat.count %}
                    {% endif %}
                {% endfor %}
                
                {% for day in weekdays %}
                    {% set count = 0 %}
                    {% for stat in bookings_by_day %}
                        {% if stat.weekday == day %}
                            {% set count = stat.count %}
                        {% endif %}
                    {% endfor %}
                    <div>
                        <div class="flex justify-between text-sm mb-1">
                            <span class="font-medium text-gray-700">{{ day }}</span>
                            <span class="text-gray-600">{{ count }} Buchungen</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-4">
                            <div class="bg-blue-600 h-4 rounded-full" style="width: {{ maxCount > 0 ? (count / maxCount * 100) : 0 }}%"></div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">‚è∞ Buchungen nach Stunde</h2>
            <div class="space-y-3">
                {% set maxPeriodCount = 0 %}
                {% for stat in bookings_by_period %}
                    {% if stat.count > maxPeriodCount %}
                        {% set maxPeriodCount = stat.count %}
                    {% endif %}
                {% endfor %}
                
                {% for period in 1..6 %}
                    {% set count = 0 %}
                    {% for stat in bookings_by_period %}
                        {% if stat.period == period %}
                            {% set count = stat.count %}
                        {% endif %}
                    {% endfor %}
                    <div>
                        <div class="flex justify-between text-sm mb-1">
                            <span class="font-medium text-gray-700">{{ period }}. Stunde</span>
                            <span class="text-gray-600">{{ count }} Buchungen</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-4">
                            <div class="bg-green-600 h-4 rounded-full" style="width: {{ maxPeriodCount > 0 ? (count / maxPeriodCount * 100) : 0 }}%"></div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">üèÜ Top 10 Lehrer (nach Buchungen)</h2>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rang</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lehrer</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Anzahl Buchungen</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Anteil</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for teacher in top_teachers %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                {% if loop.index == 1 %}ü•á
                                {% elseif loop.index == 2 %}ü•à
                                {% elseif loop.index == 3 %}ü•â
                                {% else %}{{ loop.index }}.
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ teacher.teacherName }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ teacher.count }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <div class="flex items-center">
                                    <div class="w-32 bg-gray-200 rounded-full h-2 mr-2">
                                        <div class="bg-blue-600 h-2 rounded-full" style="width: {{ total_bookings > 0 ? (teacher.count / total_bookings * 100) : 0 }}%"></div>
                                    </div>
                                    <span class="text-gray-600">{{ total_bookings > 0 ? ((teacher.count / total_bookings * 100)|number_format(1)) : 0 }}%</span>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-8">
        <a href="{{ path('sportoase_admin_dashboard') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
            ‚Üê Zur√ºck zum Admin-Dashboard
        </a>
    </div>
</div>
{% endblock %}
